
@{
    ViewBag.Title = "Criar novo usuário";
    Menus.SetActiveMenu(Menus.MenuEnum.Usuarios);
}

<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link href='http://fonts.googleapis.com/css?family=Varela+Round' rel='stylesheet' type='text/css'>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.13.1/jquery.validate.min.js"></script>    
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <link href="~/Content/login.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/site.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="text-center" style="padding:50px 0">
        <main>
            <div class="login-form-1">
                @using (Html.BeginForm("Adiciona", "NovoUsuario", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="login-form-main-message"></div>
                    <div class="main-login-form">
                        <div class="login-group">
                            <div class="form-group">
                                <label for="Login" class="sr-only">Nome de Usuário</label>
                                <input type="text" class="form-control" id="login" name="Login" placeholder="Nome de Usuário">
                            </div>
                            <div class="form-group">
                                <label for="reg_password" class="sr-only">Senha</label>
                                <input type="password" class="form-control" id="senha" name="Senha" placeholder="Senha" onchange="confirmacao()">
                            </div>
                            <div class="form-group">
                                <label for="reg_password_confirm" class="sr-only">Confirme sua senha</label>
                                <input type="password" class="form-control" id="confirmarSenha" name="Senha" placeholder="Confirme sua senha" onchange="confirmacao()">
                            </div>

                            <div class="form-group">
                                <label for="reg_email" class="sr-only">E-mail</label>
                                <input type="text" class="form-control" id="reg_email" name="Email" placeholder="E-mail">
                            </div>
                            <div class="form-group">
                                <label for="reg_fullname" class="sr-only">Nome Completo</label>
                                <input type="text" class="form-control" id="reg_fullname" name="Nome" placeholder="Nome Completo">
                            </div>
                            <div class="form-group">
                                <label for="reg_phone" class="sr-only">Telefone</label>
                                <input type="text" class="form-control" id="reg_phone" name="Telefone" placeholder="Telefone">
                            </div>
                            <div class="form-group login-group-checkbox">
                                <input type="radio" class="" name="SexoId" id="female" value="1" placeholder="username">
                                <label for="female">Feminino</label>

                                <input type="radio" class="" name="SexoId" id="male" value="2" placeholder="username">
                                <label for="male">Masculino</label>

                                <input type="radio" class="" name="SexoId" id="intersexual" value="3" placeholder="username">
                                <label for="intersexual">Intersexual</label>

                                <input type="radio" class="" name="SexoId" id="other" value="4" placeholder="other">
                                <label for="other">Outro</label>
                            </div>       
                        </div>
                        <button type="submit" class="login-button">Registrar</button>
                    </div>
                    <div class="etc-login-form">
                        <p>Já possui uma conta? <a href="http://localhost:50274/Master/Login">Login</a></p>
                    </div>
                }
            </div>
        </main>
    </div>
    <script>
        function confirmacao() {
            ($("#senha").val() == $("#confirmarSenha").val()) ? $(".login-button").removeAttr("Disabled") : $(".login-button").attr("Disabled", "Disabled");
            if ($("#senha").val() == "" || $("confirmarSenha").val() == "") $(".login-button").attr("Disabled", "Disabled");
        }
        confirmacao();
    </script>
</body>